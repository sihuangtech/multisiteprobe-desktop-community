{
  "name": "multisitetool",
  "version": "1.0.0",
  "description": "一个测量多个网站延迟并获取IP地理位置信息的工具",
  "main": "main.js",
  "scripts": {
    "dev": "vite --debug",
    "build": "vite build",
    "preview": "vite preview",
    "start": "electron .",
    "electron:dev": "concurrently --kill-others \"npm run dev\" \"wait-on --verbose --timeout 60000 http://localhost:3000 && cross-env NODE_ENV=development electron . --trace-warnings\"",
    "electron:build": "npm run build && electron-builder",
    "electron:preview": "cross-env NODE_ENV=production npm run build && electron .",
    "postinstall": "electron-builder install-app-deps",
    "clean": "rimraf dist release",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win",
    "dist:win:x64": "npm run build && electron-builder --win --x64",
    "dist:win:ia32": "npm run build && electron-builder --win --ia32",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:mac:x64": "npm run build && electron-builder --mac --x64",
    "dist:mac:arm64": "npm run build && electron-builder --mac --arm64",
    "dist:mac:universal": "npm run build && electron-builder --mac --universal",
    "dist:linux": "npm run build && electron-builder --linux",
    "dist:linux:x64": "npm run build && electron-builder --linux --x64",
    "dist:linux:arm64": "npm run build && electron-builder --linux --arm64",
    "dist:unsigned": "cross-env CSC_IDENTITY_AUTO_DISCOVERY=false npm run build && electron-builder --publish=never",
    "dist:win:unsigned": "cross-env CSC_IDENTITY_AUTO_DISCOVERY=false npm run build && electron-builder --win --publish=never",
    "dist:mac:unsigned": "cross-env CSC_IDENTITY_AUTO_DISCOVERY=false npm run build && electron-builder --mac --publish=never",
    "dist:linux:unsigned": "cross-env CSC_IDENTITY_AUTO_DISCOVERY=false npm run build && electron-builder --linux --publish=never"
  },
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://gitee.com/Snake-Konginchrist/MultiSiteLatencyTool-Desktop"
  },
  "author": "Snake Konginchrist",
  "license": "GPL-3.0",
  "dependencies": {
    "@element-plus/icons-vue": "^2.3.1",
    "axios": "^1.9.0",
    "dotenv": "^16.5.0",
    "electron-store": "^10.0.1",
    "element-plus": "^2.9.11",
    "vue": "^3.5.16",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.2.4",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^36.3.2",
    "electron-builder": "^26.0.12",
    "rimraf": "^6.0.1",
    "vite": "^6.3.5",
    "wait-on": "^8.0.3"
  },
  "build": {
    "appId": "cn.skstudio.multisitetool",
    "productName": "MultiSiteTool",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js",
      "package.json",
      "electron-store-wrapper.js"
    ],
    "extraResources": [
      {
        "from": "node_modules/electron-store",
        "to": "node_modules/electron-store"
      }
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        "dmg",
        "zip"
      ],
      "electronLanguages": ["en", "zh-CN"]
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "category": "Network"
    },
    "publish": {
      "provider": "generic",
      "url": "https://www.skstudio.cn/multisitetool/update"
    }
  }
}
